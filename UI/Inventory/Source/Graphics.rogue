uses Plasmacore

class Graphics [singleton]
  PROPERTIES
    button_font : Font
    list_font   : Font

  METHODS
    method init
      button_font = Font( "Font-Arial-72.png" )
      list_font   = Font( "Font-Arial-36.png" )

    method button_height->Int32
      return (Display.width / 5)

    method button_size->XY
      return button_height * XY(2,1)

    method resize
      button_font.height = button_height
      list_font.height   = (button_height / 2)
endClass
